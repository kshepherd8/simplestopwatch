/****************************************************************************
 *                     EXPORTED TYPES and DEFINITIONS                       *
 ****************************************************************************/
typedef enum
{
    STOPWATCH_UNITIALIZED,
    STOPWATCH_IDLE,
    STOPWATCH_RUNNING    
} StopwatchState;

typedef struct StopWatch
{
    void (*Start)(void);
    void (*Stop)(void);
    void (*Reset)(void);
    StopWatchTime (*GetTime)(void);
} StopWatch;

typedef struct StopWatchTime
{

} StopWatchTime;

